@model Pedido

<!-- HEROES -->
<main role="main" class="container bg-light text-dark px-4 py-5 text-center">

    <div class="starter-template">
        <h1 class="display-5 fw-bold">@ViewBag.CheckoutCompletoMensagem</h1>
        <p class="lead">Seu pedido será preparado com muito amor e carinho pela nossa equipe.</p>
    </div>
</main>

<main>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Situação Pedido</th>
                <th>Número Pedido:</th>
                <th>Valor Total:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Nome</td>
                <td>@Model.PedidoEnviado</td>
                <td>@Model.PedidoId</td>
                <td>@(((decimal)ViewBag.TotalPedido).ToString("c"))</td>
            </tr>
        </tbody>
    </table>
</main>
