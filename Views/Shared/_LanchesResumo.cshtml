@model Lanche

<main>
    <div class="table-responsive-sm">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th scope="col">Açaí</th>
                    <th scope="col">Tamanho Açaí</th>
                    <th scope="col">Complementos</th>
                    <th scope="col">Preço</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Categoria.CategoriaNome</td>
                    <td>@Model.Nome</td>
                    <td>@Model.DescricaoComplementos</td>
                    <td>@Model.Preco.ToString("c")</td>
                </tr>
            </tbody>
        </table>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                    <i class="fas fa-cart-plus"></i> Adicionar
                </a>
            </p>
        </div>
    </div>
</main>

