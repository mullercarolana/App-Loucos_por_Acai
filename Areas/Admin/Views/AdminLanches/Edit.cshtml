@model App_Loucos_por_Acai.Models.Lanche

<main role="main" class="container bg-light text-dark px-4 py-5 text-center">

    <div class="starter-template">
        <h1 class="display-5 fw-bold">Editar Lanche</h1>
    </div>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a asp-action="Index">
            <button type="button" class="btn btn-primary btn-sm px-4 me-sm-3 fw-bold">Retornar para Lista</button>
        </a>
    </div>
</main>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LancheId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoComplementos" class="control-label"></label>
                <textarea asp-for="DescricaoComplementos" class="form-control"></textarea>
                <span asp-validation-for="DescricaoComplementos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control"/>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsLanchePreferido"/> @Html.DisplayNameFor(model => model.IsLanchePreferido)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <hr class="my-4">

            <div class="form-group">
                <input class="btn btn-success btn-md" type="submit" value="Salvar" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>
